<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="studyCard">
	<!-- 질문답변&카드 조회 -->
	<select id="selectCard" parameterType="int" resultType="vo.ViewVo">
		select * from qnaCard where c_idx = #{c_idx}
	</select>
	
	<!-- c_idx로 m_nickname 구하기 (팝업창 사용) -->
	<select id="selectNickname" parameterType="int" resultType="java.lang.String">
		select m_nickname from studyCard where c_idx=#{c_idx}
	</select>
	
	
</mapper>