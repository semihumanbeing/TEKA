<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="studyCard">
	<!-- 질문답변&카드 조회 -->
	<select id="selectCard" parameterType="int" resultType="vo.ViewVo">
		select * from qnaCard where c_idx = #{c_idx}
	</select>
	
	<!-- 즐겨찾기 초기화를 위해 오답 처리 된 질문 읽어오기 -->
	<select id="selectWrongNumber" parameterType="vo.WrongQnaVo" resultType="java.lang.Integer">
		select q_idx from wrongqna where c_idx=#{c_idx} and m_idx=#{m_idx}
	</select>
	
	<!-- 즐겨찾기 테이블에 질문 넣기 -->
	<insert id="insertWrongQnaCard" parameterType="vo.WrongQnaVo">
		insert into wrongQna values(seq_wrongqna_wq_idx.nextVal, #{q_idx}, #{c_idx}, #{m_idx})
	</insert>
	
	<!-- 즐겨찾기 테이블에서 삭제하기 -->
	<delete id="deleteWrongQnaCard" parameterType="vo.WrongQnaVo">
		delete wrongQna where m_idx=#{m_idx} and q_idx=#{q_idx}
	</delete>
  
	<!-- c_idx로 m_nickname 구하기 (팝업창 사용) -->
	<select id="selectNickname" parameterType="int" resultType="java.lang.String">
		select m_nickname from studyCard where c_idx=#{c_idx}
	</select>
	
	
</mapper>